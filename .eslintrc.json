{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "no-console": "off",
    "no-plusplus": "off",
    "no-param-reassign": "off",
    "no-obj-calls": "off"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "settings": {
    "import/extensions": [".js",".ts"],
    "import/resolver": {
      "node": {
        "extensions": [".js",".ts"]
      }
    }
  }
}
